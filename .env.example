# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=True
ENVIRONMENT=development

# Saby CRM API Configuration
SABY_APP_CLIENT_ID=your_app_client_id_here
SABY_APP_SECRET=your_app_secret_here
SABY_SECRET_KEY=your_secret_key_here
SABY_BASE_URL=https://online.sbis.ru
SABY_AUTH_URL=https://online.sbis.ru/oauth/service/
SABY_API_URL=https://online.sbis.ru/service/

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://sabby.ru"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Health Check
HEALTH_CHECK_PATH=/health

# Prometheus Metrics
METRICS_PATH=/metrics
METRICS_ENABLED=true

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=300

# Domain Configuration
DOMAIN=sabby.ru
CADDY_EMAIL=admin@sabby.ru
CADDY_API_PORT=8000

# Docker Configuration
DOCKER_IMAGE_NAME=sbis-api-fastapi
DOCKER_CONTAINER_NAME=sbis-api-container
DOCKER_NETWORK=sbis-network

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/sbis_api
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# Monitoring
SENTRY_DSN=
PROMETHEUS_GATEWAY=http://localhost:9091

# Feature Flags
FEATURE_CREATE_DEAL=true
FEATURE_UPDATE_DEAL=true
FEATURE_DELETE_DEAL=false
FEATURE_BULK_OPERATIONS=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=7